root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

[*.java]
indent_style = space
indent_size = 4
max_line_length = 120
ij_java_imports_layout = *
ij_java_use_single_class_imports = true
ij_java_class_count_to_use_import_on_demand = 999

[*.{yml,yaml}]
indent_style = space
indent_size = 2

[*.{gradle,groovy}]
indent_style = space
indent_size = 4

[*.md]
trim_trailing_whitespace = false

